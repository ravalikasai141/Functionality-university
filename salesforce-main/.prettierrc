{
  "trailingComma": "none",
  "printWidth": 120,
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": {
        "parser": "lwc",
        "quoteProps": "preserve",
        "tabWidth": 4
      }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": {
        "parser": "html",
        "tabWidth": 4
      }
    },
    {
      "files": "*.js",
      "options": {
        "singleQuote": true,
        "arrowParens": "always"
      }
    },
    {
      "files": "*.{cls,trigger}",
      "options": {
        "parser": "apex",
        "tabWidth": 4
      }
    }
  ]
}
